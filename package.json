{
  "name": "meta-ads-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Meta (Facebook/Instagram) Ads management",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "meta-ads-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node --test build/**/*.test.js",
    "test:watch": "node --test --watch build/**/*.test.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "meta-ads",
    "facebook-ads",
    "instagram-ads",
    "advertising",
    "marketing-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "facebook-nodejs-business-sdk": "^22.0.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
